import React, { useState, useEffect, useCallback, useMemo, useRef } from 'react';
import { initializeApp } from 'firebase/app';
import { getAuth, signInAnonymously, signInWithCustomToken } from 'firebase/auth';
import { getFirestore, doc, getDoc, setDoc, updateDoc, onSnapshot } from 'firebase/firestore';
import { setLogLevel } from 'firebase/firestore';
import {
  BookOpen,
  ClipboardList,
  LayoutGrid,
  Settings,
  AlertTriangle,
  Save,
  Loader2,
  Lock,
  Unlock,
  Key
} from 'lucide-react';

// Firestore loglarÄ±nÄ± aÃ§alÄ±m (geliÅŸtirme iÃ§in faydalÄ±)
// setLogLevel('debug');

/**
 * Ana Uygulama BileÅŸeni
 */
const App = () => {
  // Ders yapÄ±sÄ±nÄ± useMemo ile tanÄ±mlÄ±yoruz
  const SUBJECT_STRUCTURE = useMemo(() => ({
    '1. DÃ¶nem': ['Matematik', 'Fizik'],
    '2. DÃ¶nem': ['Matematik', 'Tarih'],
  }), []);
  
  const [page, setPage] = useState('home'); // 'home', 'subject', 'admin'
  const [db, setDb] = useState(null);
  const [auth, setAuth] = useState(null);
  const [userId, setUserId] = useState('');
  const [isAuthReady, setIsAuthReady] = useState(false);
  
  // Yeni dÃ¶nem state'i
  const [selectedPeriod, setSelectedPeriod] = useState('1. DÃ¶nem');
  // SeÃ§ili dersi, baÅŸlangÄ±Ã§ dÃ¶nemi yapÄ±sÄ±na gÃ¶re ayarlÄ±yoruz
  const [selectedSubject, setSelectedSubject] = useState(SUBJECT_STRUCTURE['1. DÃ¶nem'][0]);

  // YÃ–NETÄ°CÄ° GÄ°RÄ°ÅÄ° Ä°Ã‡Ä°N STATE'LER
  const [isAdminAuthenticated, setIsAdminAuthenticated] = useState(false);
  const [adminPasswordInput, setAdminPasswordInput] = useState('');
  const [adminMockPassword, setAdminMockPassword] = useState('admin123'); 

  // Firestore ve Kimlik DoÄŸrulama BaÅŸlangÄ±cÄ±
  useEffect(() => {
    try {
      const appId = typeof __app_id !== 'undefined' ? __app_id : 'default-app-id';
      const firebaseConfig = typeof __firebase_config !== 'undefined' ? JSON.parse(__firebase_config) : {};

      if (Object.keys(firebaseConfig).length === 0) {
        console.error("Firebase konfigÃ¼rasyonu eksik.");
        return;
      }

      const app = initializeApp(firebaseConfig);
      const firestore = getFirestore(app);
      const userAuth = getAuth(app);

      setDb(firestore);
      setAuth(userAuth);

      const initAuth = async () => {
        try {
          const initialAuthToken = typeof __initial_auth_token !== 'undefined' ? __initial_auth_token : null;
          if (initialAuthToken) {
            await signInWithCustomToken(userAuth, initialAuthToken);
          } else {
            await signInAnonymously(userAuth);
          }
          const currentUserId = userAuth.currentUser?.uid || crypto.randomUUID();
          setUserId(currentUserId);
          setIsAuthReady(true);
          console.log("Firebase BaÅŸarÄ±lÄ±, KullanÄ±cÄ± ID:", currentUserId);
        } catch (error) {
          console.error("Kimlik doÄŸrulama hatasÄ±:", error);
          setIsAuthReady(true); // Hata olsa bile UI'Ä±n ilerlemesine izin ver
        }
      };

      initAuth();

    } catch (error) {
      console.error("Firebase baÅŸlatÄ±lÄ±rken kritik hata:", error);
      setIsAuthReady(true);
    }
  }, []);

  // Firestore yolunu oluÅŸturma yardÄ±mcÄ± fonksiyonu (Public data)
  // Åimdi hem subject hem de period alÄ±yor
  const getPublicDocRef = useCallback((subject, period) => {
    if (!db) return null;
    const appId = typeof __app_id !== 'undefined' ? __app_id : 'default-app-id';
    // DokÃ¼man ID'sini ders ve dÃ¶nem bilgisini birleÅŸtirerek oluÅŸturuyoruz
    const docId = `${subject}_${period.replace(/\s/g, '')}`; 
    return doc(db, 'artifacts', appId, 'public', 'data', 'subjects', docId);
  }, [db]);

  // YÃ¶netici GiriÅŸ Ä°ÅŸlemi
  const handleAdminLogin = () => {
    if (adminPasswordInput === adminMockPassword) { // State deÄŸiÅŸkeni kullanÄ±lÄ±yor
      setIsAdminAuthenticated(true);
      setAdminPasswordInput(''); // Åifreyi temizle
      console.log("YÃ¶netici giriÅŸi baÅŸarÄ±lÄ±.");
    } else {
      console.error("HatalÄ± yÃ¶netici ÅŸifresi.");
      setAdminPasswordInput('');
    }
  };


  // --------------- GÃ¶rÃ¼ntÃ¼leme BileÅŸenleri ---------------

  const SubjectCard = ({ name, icon, onClick }) => (
    <div
      onClick={onClick}
      className="bg-white p-6 rounded-xl shadow-lg hover:shadow-xl transition-all duration-300 transform hover:scale-[1.01] cursor-pointer border-t-4 border-indigo-500 flex flex-col items-center justify-center text-center"
    >
      <span className="text-4xl mb-3">{icon}</span>
      <h2 className="text-xl font-semibold text-gray-800">{name}</h2>
    </div>
  );

  // SubjectDetail bileÅŸeni artÄ±k period bilgisini de alÄ±yor
  const SubjectDetail = ({ subject, period, db, getPublicDocRef, userId }) => {
    const [content, setContent] = useState({ konu: '', test: [] });
    const [tab, setTab] = useState('konu'); // 'konu', 'test'
    const [loading, setLoading] = useState(true);
    const [error, setError] = useState(null);

    useEffect(() => {
      if (!db) return;
      // DokÃ¼man referansÄ±nÄ± oluÅŸtururken period bilgisini kullanÄ±yoruz
      const docRef = getPublicDocRef(subject, period); 
      if (!docRef) return;

      setLoading(true);
      setError(null);

      const unsubscribe = onSnapshot(docRef, (docSnap) => {
        setLoading(false);
        if (docSnap.exists()) {
          const data = docSnap.data();
          const testDataString = data.testSorulari || '[]';
          let parsedTest = [];
          try {
            parsedTest = JSON.parse(testDataString);
          } catch (e) {
            console.error("Test sorularÄ± JSON hatasÄ±:", e);
            setError("Test sorularÄ± hatalÄ± formatta.");
          }

          setContent({
            konu: data.konuAnlatimi || 'Ä°Ã§erik BulunamadÄ±.',
            test: parsedTest
          });
        } else {
          setContent({ konu: 'Bu ders iÃ§in henÃ¼z iÃ§erik girilmemiÅŸtir.', test: [] });
          // Hata mesajÄ±nÄ± daha spesifik hale getirdik
          setError(`${period} dÃ¶nemi iÃ§in veri tabanÄ±nda bu ders belgesi bulunamadÄ±.`);
        }
      }, (err) => {
        console.error("Firestore dinleme hatasÄ±:", err);
        setError("Ä°Ã§erik yÃ¼klenirken bir hata oluÅŸtu.");
        setLoading(false);
      });

      // period baÄŸÄ±mlÄ±lÄ±ÄŸÄ±nÄ± ekledik
      return () => unsubscribe();
    }, [db, subject, period, getPublicDocRef]);

    const renderContent = () => {
      if (loading) {
        return <div className="p-10 text-center text-gray-500 flex items-center justify-center"><Loader2 className="animate-spin mr-2" /> Ä°Ã§erik yÃ¼kleniyor...</div>;
      }
      if (error) {
        return <div className="p-4 bg-red-100 border-l-4 border-red-500 text-red-700 rounded-md mt-4 flex items-center"><AlertTriangle className="h-5 w-5 mr-2" /> {error}</div>;
      }

      if (tab === 'konu') {
        // Markdown iÃ§eriÄŸini temel bir div iÃ§inde gÃ¶steriyoruz.
        const formattedKonu = content.konu.split('\n').map((line, index) => {
            if (line.startsWith('# ')) return <h2 key={index} className="text-2xl font-bold mt-4 mb-2">{line.substring(2)}</h2>;
            if (line.startsWith('## ')) return <h3 key={index} className="text-xl font-semibold mt-3 mb-1">{line.substring(3)}</h3>;
            return <p key={index} className="mb-2 text-gray-700">{line}</p>;
        });
        return <div className="prose p-4">{formattedKonu}</div>;

      } else if (tab === 'test') {
        if (content.test.length === 0) {
            return <div className="p-10 text-center text-gray-500">Bu ders iÃ§in henÃ¼z test sorusu girilmemiÅŸtir.</div>;
        }
        return (
          <div className="space-y-6 p-4">
            {content.test.map((item, index) => (
              <div key={index} className="bg-white p-5 rounded-lg shadow-md border-l-4 border-indigo-500">
                <p className="font-bold text-gray-800 mb-2">Soru {index + 1}:</p>
                <p className="text-lg mb-3">{item.soru}</p>
                <div className="mt-2 pt-2 border-t border-gray-100">
                    <p className="text-sm font-medium text-indigo-600">Cevap:</p>
                    <p className="text-gray-600 italic">{item.cevap}</p>
                </div>
              </div>
            ))}
          </div>
        );
      }
    };

    return (
      <div className="p-4 sm:p-6 bg-white rounded-xl shadow-lg">
        <h1 className="text-3xl font-extrabold text-indigo-700 mb-2">{subject} Ders DetaylarÄ±</h1>
        <h2 className="text-xl font-semibold text-gray-500 mb-4">{period}</h2> {/* DÃ¶nem bilgisini gÃ¶steriyoruz */}

        {/* Sekmeler */}
        <div className="flex border-b border-gray-200 mb-4">
          <button
            onClick={() => setTab('konu')}
            className={`py-2 px-4 text-sm sm:text-base font-medium rounded-t-lg transition-colors duration-200 flex items-center ${tab === 'konu' ? 'text-indigo-600 border-b-2 border-indigo-600' : 'text-gray-500 hover:text-gray-700'}`}
          >
            <BookOpen className="h-5 w-5 mr-2" />
            Konu AnlatÄ±mÄ±
          </button>
          <button
            onClick={() => setTab('test')}
            className={`py-2 px-4 text-sm sm:text-base font-medium rounded-t-lg transition-colors duration-200 flex items-center ${tab === 'test' ? 'text-indigo-600 border-b-2 border-indigo-600' : 'text-gray-500 hover:text-gray-700'}`}
          >
            <ClipboardList className="h-5 w-5 mr-2" />
            Test SorularÄ±
          </button>
        </div>

        {/* Ä°Ã§erik AlanÄ± */}
        {renderContent()}

        <p className="mt-6 text-xs text-gray-400 text-right">KullanÄ±cÄ± ID: {userId}</p>
      </div>
    );
  };
  
  // --------------- YÃ¶netici GiriÅŸ BileÅŸeni ---------------
  const AdminLogin = ({ password, setPassword, handleLogin, mockPassword }) => {
    const inputRef = useRef(null);
    const [loginError, setLoginError] = useState(false);

    // Mobil klavyenin dÃ¼zgÃ¼n aÃ§Ä±lmasÄ±nÄ± saÄŸlamak iÃ§in inputa odaklan
    useEffect(() => {
        if (inputRef.current) {
            inputRef.current.focus();
        }
    }, []);

    const handleInternalLogin = () => {
        if (password === mockPassword) {
            handleLogin();
            setLoginError(false);
        } else {
            setLoginError(true);
            setPassword('');
        }
    };

    return (
      <div className="flex flex-col items-center p-8 bg-white rounded-xl shadow-2xl w-full max-w-sm">
        <Lock className="h-12 w-12 text-red-500 mb-4" />
        <h1 className="text-2xl font-bold text-gray-800 mb-6">YÃ¶netici GiriÅŸi</h1>
        <p className="text-sm text-gray-500 mb-4 text-center">Ä°Ã§eriÄŸi dÃ¼zenlemek iÃ§in yÃ¶netici ÅŸifrenizi girin.</p>
        
        <input
            ref={inputRef} // Ref eklendi
            type="password"
            placeholder="Åifre"
            value={password}
            onChange={(e) => {
                setPassword(e.target.value);
                setLoginError(false);
            }}
            onKeyDown={(e) => { if (e.key === 'Enter') handleInternalLogin(); }}
            className={`w-full p-3 border rounded-lg shadow-sm focus:ring-red-500 focus:border-red-500 mb-4 ${loginError ? 'border-red-500' : 'border-gray-300'}`}
        />
        
        {loginError && (
            <div className="p-2 mb-4 text-sm text-red-700 bg-red-100 rounded-lg w-full flex items-center justify-center">
                <AlertTriangle className="h-4 w-4 mr-1"/> HatalÄ± ÅŸifre.
            </div>
        )}

        <button
          onClick={handleInternalLogin}
          className="w-full bg-red-600 hover:bg-red-700 text-white font-semibold py-3 px-8 rounded-xl shadow-lg transition-all duration-300 transform hover:scale-[1.01] flex items-center justify-center"
        >
          <Unlock className="h-5 w-5 mr-2" /> GiriÅŸ Yap
        </button>
        <p className="mt-4 text-xs text-gray-400">Mevcut Mock Åifre: <span className="font-mono text-red-400">{mockPassword}</span></p>
        <p className="mt-2 text-xs text-gray-400">Not: GerÃ§ek bir uygulamada ÅŸifre sunucuda doÄŸrulanmalÄ±dÄ±r.</p>
      </div>
    );
  };


  // --------------- YÃ¶netim BileÅŸeni (AdminPanel) ---------------

  const AdminPanel = ({ db, getPublicDocRef, adminMockPassword, setAdminMockPassword, setIsAdminAuthenticated }) => {
    
    // DÃ¶nem yapÄ±sÄ±nÄ± AdminPanel iÃ§inde de kullanÄ±yoruz
    const SUBJECT_STRUCTURE = useMemo(() => ({
        '1. DÃ¶nem': ['Matematik', 'Fizik'],
        '2. DÃ¶nem': ['Matematik', 'Tarih'],
    }), []);

    const periodOptions = Object.keys(SUBJECT_STRUCTURE);
    
    // Yeni dÃ¶nem state'i
    const [period, setPeriod] = useState('1. DÃ¶nem'); 
    // Subject state'i baÅŸlangÄ±Ã§ta 1. DÃ¶nem'in ilk dersine ayarlandÄ±
    const [subject, setSubject] = useState(SUBJECT_STRUCTURE['1. DÃ¶nem'][0]); 

    const [konuContent, setKonuContent] = useState('');
    const [testContent, setTestContent] = useState('');
    const [loading, setLoading] = useState(false);
    const [saving, setSaving] = useState(false);
    const [message, setMessage] = useState({ text: '', type: '' }); // Ä°Ã§erik yÃ¶netimi mesajÄ±

    // Åifre DeÄŸiÅŸtirme State'leri
    const [newPassword, setNewPassword] = useState('');
    const [confirmPassword, setConfirmPassword] = useState('');
    const [passwordChangeMessage, setPasswordChangeMessage] = useState({ text: '', type: '' });


    // 1. Ä°Ã§eriÄŸi YÃ¼kleme Fonksiyonu - Åimdi subject ve period alÄ±yor
    const loadContent = useCallback(async (selectedSubject, selectedPeriod) => {
      if (!db || loading) return;

      setLoading(true);
      setMessage({ text: 'Ä°Ã§erik yÃ¼kleniyor...', type: 'info' });

      try {
        // Doc referansÄ± oluÅŸturulurken hem ders hem dÃ¶nem bilgisi kullanÄ±ldÄ±
        const docRef = getPublicDocRef(selectedSubject, selectedPeriod); 
        if (!docRef) throw new Error("Veri tabanÄ± baÄŸlantÄ±sÄ± yok.");

        const docSnap = await getDoc(docRef);

        if (docSnap.exists()) {
          const data = docSnap.data();
          setKonuContent(data.konuAnlatimi || '');
          setTestContent(data.testSorulari || '[]');
          setMessage({ text: `'${selectedSubject}' dersinin '${selectedPeriod}' iÃ§eriÄŸi baÅŸarÄ±yla yÃ¼klendi.`, type: 'success' });
        } else {
          // Belge yoksa, varsayÄ±lan bir baÅŸlangÄ±Ã§ iÃ§eriÄŸi oluÅŸturalÄ±m
          const initialData = {
            name: selectedSubject,
            konuAnlatimi: `# ${selectedSubject} ${selectedPeriod} Konu AnlatÄ±mÄ±\n\nBu, gÃ¼ncelleyeceÄŸiniz konu anlatÄ±mÄ± bÃ¶lÃ¼mÃ¼dÃ¼r.`,
            testSorulari: '[\n  {\n    "soru": "Ä°lk varsayÄ±lan soru?",\n    "cevap": "Ä°lk varsayÄ±lan cevap"\n  }\n]'
          };
          await setDoc(docRef, initialData);
          setKonuContent(initialData.konuAnlatimi);
          setTestContent(initialData.testSorulari); 
          setMessage({ text: `'${selectedSubject}' dersinin '${selectedPeriod}' dÃ¶nemi iÃ§in varsayÄ±lan iÃ§erik oluÅŸturuldu ve yÃ¼klendi.`, type: 'warning' });
        }
      } catch (error) {
        console.error("Ä°Ã§erik yÃ¼klenirken hata:", error);
        setMessage({ text: `Ä°Ã§erik yÃ¼klenemedi: ${error.message}`, type: 'error' });
      } finally {
        setLoading(false);
      }
    }, [db, loading, getPublicDocRef]);

    // Subject veya Period deÄŸiÅŸtiÄŸinde iÃ§eriÄŸi yÃ¼kle
    useEffect(() => {
      if (db) {
        loadContent(subject, period);
      }
    }, [db, subject, period, loadContent]);

    // Period deÄŸiÅŸtiÄŸinde, eÄŸer seÃ§ili ders yeni periyotta yoksa, ilk derse sÄ±fÄ±rla
    useEffect(() => {
        if (!SUBJECT_STRUCTURE[period]?.includes(subject)) {
            setSubject(SUBJECT_STRUCTURE[period][0] || '');
        }
    }, [period, subject, SUBJECT_STRUCTURE]);

    // 2. Ä°Ã§eriÄŸi Kaydetme Fonksiyonu
    const saveContent = async () => {
      if (!db || saving || loading) return;

      // Alan kontrolÃ¼
      if (!konuContent.trim() || !testContent.trim()) {
        setMessage({ text: 'Konu AnlatÄ±mÄ± ve Test SorularÄ± alanlarÄ± boÅŸ bÄ±rakÄ±lamaz.', type: 'error' });
        return;
      }

      // JSON geÃ§erliliÄŸini kontrol et
      try {
        JSON.parse(testContent);
      } catch (e) {
        setMessage({ text: 'Test SorularÄ± alanÄ± geÃ§erli bir JSON formatÄ±nda deÄŸil. LÃ¼tfen kontrol edin.', type: 'error' });
        return;
      }

      setSaving(true);
      setMessage({ text: 'DeÄŸiÅŸiklikler veri tabanÄ±na yazÄ±lÄ±yor...', type: 'info' });

      try {
        // Doc referansÄ± oluÅŸturulurken hem ders hem dÃ¶nem bilgisi kullanÄ±ldÄ±
        const docRef = getPublicDocRef(subject, period);

        await updateDoc(docRef, {
          konuAnlatimi: konuContent,
          testSorulari: testContent
        });

        setMessage({ text: `'${subject}' dersinin '${period}' iÃ§eriÄŸi baÅŸarÄ±yla gÃ¼ncellendi!`, type: 'success' });

      } catch (error) {
        console.error("Ä°Ã§erik kaydedilirken hata:", error);
        setMessage({ text: `Kaydetme hatasÄ±: ${error.message}`, type: 'error' });
      } finally {
        setSaving(false);
      }
    };

    // 3. Åifre DeÄŸiÅŸtirme Fonksiyonu
    const handleChangePassword = () => {
        if (newPassword.length < 6) {
            setPasswordChangeMessage({ text: 'Yeni ÅŸifre en az 6 karakter olmalÄ±dÄ±r.', type: 'error' });
            return;
        }
        if (newPassword !== confirmPassword) {
            setPasswordChangeMessage({ text: 'Yeni ÅŸifreler eÅŸleÅŸmiyor.', type: 'error' });
            return;
        }

        // Parent component'taki (App) mock ÅŸifre state'ini gÃ¼ncelle
        setAdminMockPassword(newPassword);
        setNewPassword('');
        setConfirmPassword('');
        setPasswordChangeMessage({ text: 'Åifre baÅŸarÄ±yla deÄŸiÅŸtirildi! Tekrar giriÅŸ yapmanÄ±z gerekecek.', type: 'success' });
        
        // BaÅŸarÄ±lÄ± ÅŸifre deÄŸiÅŸiminden sonra admin oturumunu kapat
        setTimeout(() => {
            setIsAdminAuthenticated(false);
            setPasswordChangeMessage({ text: '', type: '' });
        }, 1500);
    };


    // Mesaj kutusunun Tailwind sÄ±nÄ±flarÄ±nÄ± hesapla
    const messageClass = useMemo(() => {
      let base = "mt-6 p-4 rounded-xl border transition-all duration-300 text-sm flex items-center";
      if (!message.text) return "hidden";

      switch (message.type) {
        case 'success':
          return `${base} bg-green-100 border-green-400 text-green-700`;
        case 'error':
          return `${base} bg-red-100 border-red-400 text-red-700`;
        case 'warning':
          return `${base} bg-yellow-100 border-yellow-400 text-yellow-700`;
        case 'info':
        default:
          return `${base} bg-blue-100 border-blue-400 text-blue-700`;
      }
    }, [message]);
    
    // Åifre deÄŸiÅŸtirme mesajÄ±nÄ±n sÄ±nÄ±flarÄ±nÄ± hesapla
    const passwordChangeMessageClass = useMemo(() => {
        let base = "p-3 rounded-lg mb-4 text-sm flex items-center";
        if (!passwordChangeMessage.text) return "hidden";

        switch (passwordChangeMessage.type) {
            case 'success':
                return `${base} bg-green-100 text-green-700`;
            case 'error':
                return `${base} bg-red-100 text-red-700`;
            default:
                return "hidden";
        }
    }, [passwordChangeMessage]);


    return (
      <div className="container mx-auto p-4 sm:p-8">
        <div className="bg-white rounded-xl shadow-2xl p-6 sm:p-10 transition-all duration-300">
          <h1 className="text-3xl font-extrabold text-red-700 mb-6 border-b pb-3 flex items-center">
            <Settings className="h-7 w-7 mr-2" /> Ä°Ã§erik YÃ¶netim Paneli
          </h1>
          <p className="text-gray-600 mb-8">Bu panel, uygulamanÄ±n ana iÃ§eriÄŸini (Konu AnlatÄ±mÄ± ve Test SorularÄ±) dÃ¼zenlemenizi saÄŸlar. DeÄŸiÅŸiklikler tÃ¼m kullanÄ±cÄ±lar iÃ§in anÄ±nda geÃ§erli olacaktÄ±r.</p>

          <div className="flex flex-col sm:flex-row gap-6 mb-6">
            {/* DÃ¶nem SeÃ§imi */}
            <div className="flex-1">
                <label htmlFor="periodSelect" className="block text-lg font-medium text-gray-800 mb-2">DÃ¶nem SeÃ§imi:</label>
                <select
                id="periodSelect"
                value={period}
                onChange={(e) => setPeriod(e.target.value)}
                disabled={loading || saving}
                className="w-full p-3 border border-gray-300 rounded-lg shadow-sm focus:ring-red-500 focus:border-red-500 transition-all duration-150 bg-gray-50 disabled:opacity-70"
                >
                {periodOptions.map(opt => (
                    <option key={opt} value={opt}>{opt}</option>
                ))}
                </select>
            </div>
            
            {/* Ders SeÃ§imi */}
            <div className="flex-1">
                <label htmlFor="subjectSelect" className="block text-lg font-medium text-gray-800 mb-2">GÃ¼ncellenecek Ders:</label>
                <select
                id="subjectSelect"
                value={subject}
                onChange={(e) => setSubject(e.target.value)}
                disabled={loading || saving}
                className="w-full p-3 border border-gray-300 rounded-lg shadow-sm focus:ring-red-500 focus:border-red-500 transition-all duration-150 bg-gray-50 disabled:opacity-70"
                >
                {/* SeÃ§ilen dÃ¶neme ait dersleri listeliyoruz */}
                {SUBJECT_STRUCTURE[period]?.map(opt => (
                    <option key={opt} value={opt}>{opt}</option>
                ))}
                </select>
            </div>
          </div>

          <div className="opacity-90">
            {/* Konu AnlatÄ±mÄ± BÃ¶lÃ¼mÃ¼ */}
            <div className="mb-8">
              <h2 className="text-xl font-bold text-gray-800 mb-4 flex items-center">
                <BookOpen className="h-6 w-6 mr-2 text-red-500" />
                Konu AnlatÄ±mÄ± Ä°Ã§eriÄŸi (Markdown)
              </h2>
              <textarea
                id="konuContent"
                value={konuContent}
                onChange={(e) => setKonuContent(e.target.value)}
                disabled={loading || saving}
                className="w-full p-4 border-2 border-gray-200 rounded-xl focus:ring-4 focus:ring-red-200 focus:border-red-400 transition-all duration-200 text-sm disabled:bg-gray-100"
                placeholder="Buraya Markdown formatÄ±nda konu anlatÄ±m iÃ§eriÄŸini girin."
                style={{ minHeight: '250px', resize: 'vertical' }}
              ></textarea>
            </div>

            {/* Test SorularÄ± BÃ¶lÃ¼mÃ¼ */}
            <div className="mb-8">
              <h2 className="text-xl font-bold text-gray-800 mb-4 flex items-center">
                <ClipboardList className="h-6 w-6 mr-2 text-red-500" />
                Test SorularÄ± (JSON FormatÄ±nda)
              </h2>
              <textarea
                id="testContent"
                value={testContent}
                onChange={(e) => setTestContent(e.target.value)}
                disabled={loading || saving}
                className="w-full p-4 border-2 border-gray-200 rounded-xl focus:ring-4 focus:ring-red-200 focus:border-red-400 transition-all duration-200 text-sm disabled:bg-gray-100"
                placeholder="Buraya test sorularÄ±nÄ± JSON formatÄ±nda girin. Ã–rn: [{ 'soru': '1+1 kaÃ§ eder?', 'cevap': '2' }]"
                style={{ minHeight: '250px', resize: 'vertical' }}
              ></textarea>
              <p className="mt-2 text-sm text-gray-500">LÃ¼tfen geÃ§erli bir JSON formatÄ± kullandÄ±ÄŸÄ±nÄ±zdan emin olun.</p>
            </div>
          </div>

          {/* Kaydet Butonu */}
          <button
            onClick={saveContent}
            disabled={loading || saving}
            className="w-full sm:w-auto bg-red-600 hover:bg-red-700 text-white font-semibold py-3 px-8 rounded-xl shadow-lg hover:shadow-xl transition-all duration-300 transform hover:scale-[1.01] flex items-center justify-center disabled:opacity-50"
          >
            {saving ? (
              <>
                <Loader2 className="h-5 w-5 mr-2 animate-spin" />
                Kaydediliyor...
              </>
            ) : (
              <>
                <Save className="h-6 w-6 mr-2" />
                DeÄŸiÅŸiklikleri Kaydet
              </>
            )}
          </button>

          {/* Ä°Ã§erik YÃ¶netimi Bildirim AlanÄ± */}
          <div className={messageClass}>
            {(message.type === 'error' || message.type === 'warning') && <AlertTriangle className="h-5 w-5 mr-2" />}
            {(message.type === 'success' || message.type === 'info') && <svg xmlns="http://www.w3.org/2000/svg" className="h-5 w-5 mr-2" viewBox="0 0 20 20" fill="currentColor"><path fillRule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clipRule="evenodd" /></svg>}
            <p>{message.text}</p>
          </div>
          
          {/* Åifre DeÄŸiÅŸtirme BÃ¶lÃ¼mÃ¼ */}
          <div className="mt-12 pt-8 border-t border-gray-200">
            <div className="bg-gray-50 p-6 rounded-xl shadow-inner">
                <h2 className="text-xl font-bold text-gray-800 mb-4 flex items-center border-b pb-2">
                    <Key className="h-6 w-6 mr-2 text-indigo-600" />
                    YÃ¶netici Åifresini DeÄŸiÅŸtir
                </h2>
                <p className="text-sm text-gray-600 mb-4">
                    Bu ÅŸifre yalnÄ±zca bu oturum iÃ§in geÃ§erli olan mock ÅŸifredir. BaÅŸarÄ±lÄ± bir deÄŸiÅŸiklik sonrasÄ± tekrar giriÅŸ yapmanÄ±z gerekecektir.
                </p>

                {/* Yeni Åifre GiriÅŸleri */}
                <div className="space-y-4 mb-4">
                    <input
                        type="password"
                        placeholder="Yeni Åifre (En az 6 karakter)"
                        value={newPassword}
                        onChange={(e) => { setNewPassword(e.target.value); setPasswordChangeMessage({ text: '', type: '' }); }}
                        className="w-full p-3 border border-gray-300 rounded-lg focus:ring-indigo-500 focus:border-indigo-500"
                    />
                    <input
                        type="password"
                        placeholder="Yeni Åifreyi Onayla"
                        value={confirmPassword}
                        onChange={(e) => { setConfirmPassword(e.target.value); setPasswordChangeMessage({ text: '', type: '' }); }}
                        className="w-full p-3 border border-gray-300 rounded-lg focus:ring-indigo-500 focus:border-indigo-500"
                    />
                </div>

                {/* Åifre DeÄŸiÅŸtirme MesajÄ± */}
                <div className={passwordChangeMessageClass}>
                    {(passwordChangeMessage.type === 'error') && <AlertTriangle className="h-4 w-4 mr-2" />}
                    <p>{passwordChangeMessage.text}</p>
                </div>

                {/* Åifre DeÄŸiÅŸtirme Butonu */}
                <button
                    onClick={handleChangePassword}
                    disabled={!newPassword || !confirmPassword || newPassword.length < 6}
                    className="w-full bg-indigo-600 hover:bg-indigo-700 text-white font-semibold py-3 rounded-xl shadow-md transition-all duration-200 disabled:opacity-50 flex items-center justify-center"
                >
                    <Save className="h-5 w-5 mr-2" />
                    Åifreyi GÃ¼ncelle
                </button>
                <p className="mt-4 text-xs text-gray-400">Mevcut Mock Åifre: <span className="font-mono text-gray-600">{adminMockPassword}</span></p>
            </div>
          </div>

        </div>
      </div>
    );
  };

  // --------------- Ana Render Fonksiyonu ---------------

  if (!isAuthReady) {
    return (
      <div className="min-h-screen flex items-center justify-center bg-gray-50">
        <Loader2 className="h-8 w-8 text-indigo-600 animate-spin" />
        <span className="ml-3 text-lg font-medium text-gray-700">BaÄŸlanÄ±lÄ±yor...</span>
      </div>
    );
  }

  const renderContent = () => {
    switch (page) {
      case 'home':
        return (
          <div className="p-4 sm:p-8 max-w-4xl mx-auto">
            <h1 className="text-4xl font-extrabold text-indigo-700 mb-8 border-b pb-2">Dersler</h1>
            
            {/* SUBJECT_STRUCTURE'Ä± dÃ¶nÃ¼p dÃ¶nemlere gÃ¶re grupluyoruz */}
            {Object.entries(SUBJECT_STRUCTURE).map(([period, subjects]) => (
                <div key={period} className="mb-10">
                    <h2 className="text-3xl font-bold text-gray-800 mb-6 border-l-4 border-indigo-500 pl-3">{period}</h2>
                    <div className="grid grid-cols-2 gap-6"> 
                        {subjects.map(subjectName => (
                            <SubjectCard 
                                key={subjectName}
                                name={subjectName} 
                                // Ders adlarÄ±na gÃ¶re uygun ikonlarÄ± atÄ±yoruz
                                icon={subjectName === 'Matematik' ? 'ğŸ”¢' : subjectName === 'Fizik' ? 'ğŸ”¬' : 'ğŸ“œ'} 
                                onClick={() => { 
                                    setSelectedSubject(subjectName); 
                                    setSelectedPeriod(period); // Yeni state'i ayarlÄ±yoruz
                                    setPage('subject'); 
                                }} 
                            />
                        ))}
                    </div>
                </div>
            ))}
          </div>
        );
      case 'subject':
        // SubjectDetail'a hem subject hem de period bilgisini iletiyoruz
        return <SubjectDetail subject={selectedSubject} period={selectedPeriod} db={db} getPublicDocRef={getPublicDocRef} userId={userId} />;
      case 'admin':
        // EÄŸer yÃ¶netici giriÅŸ yapmadÄ±ysa, giriÅŸ sayfasÄ±nÄ± gÃ¶ster
        if (!isAdminAuthenticated) {
            // Klavye sorununu Ã§Ã¶zmek iÃ§in dikey ve yatay merkezleme yapÄ±lÄ±rken kaydÄ±rmaya izin veren yapÄ±.
            return (
                <div className="min-h-[calc(100vh-64px)] flex items-center justify-center p-4">
                    <AdminLogin 
                        password={adminPasswordInput}
                        setPassword={setAdminPasswordInput}
                        handleLogin={handleAdminLogin}
                        mockPassword={adminMockPassword} // GÃ¼ncel ÅŸifre props olarak gÃ¶nderiliyor
                    />
                </div>
            );
        }
        // GiriÅŸ yaptÄ±ysa AdminPanel'i gÃ¶ster
        return (
            <AdminPanel 
                db={db} 
                getPublicDocRef={getPublicDocRef} 
                adminMockPassword={adminMockPassword}
                setAdminMockPassword={setAdminMockPassword}
                setIsAdminAuthenticated={setIsAdminAuthenticated} // Ã‡Ä±kÄ±ÅŸ yapmak iÃ§in gÃ¶nderildi
            />
        );
      default:
        return <p className="text-center mt-10">Sayfa BulunamadÄ±.</p>;
    }
  };

  return (
    <div className="min-h-screen bg-gray-50 pb-10">
      {/* Ãœst Navigasyon MenÃ¼sÃ¼ */}
      <nav className="bg-indigo-600 shadow-md">
        <div className="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
          <div className="flex items-center justify-between h-16">
            <div className="flex items-center">
              <span className="text-white text-xl font-bold">EÄŸitim PortalÄ±</span>
            </div>
            <div className="flex space-x-2 sm:space-x-4">
              <button
                onClick={() => {setPage('home'); setIsAdminAuthenticated(false);}} // Anasayfaya dÃ¶nerken admin oturumunu kapat
                className={`py-2 px-3 rounded-lg text-sm font-medium transition-colors duration-200 flex items-center ${page === 'home' ? 'bg-indigo-700 text-white' : 'text-indigo-100 hover:bg-indigo-500/50'}`}
              >
                <LayoutGrid className="h-5 w-5 mr-1" />
                Dersler
              </button>
              <button
                onClick={() => setPage('admin')}
                className={`py-2 px-3 rounded-lg text-sm font-medium transition-colors duration-200 flex items-center ${page === 'admin' ? 'bg-red-700 text-white' : 'text-red-100 hover:bg-red-500/50'}`}
              >
                <Settings className="h-5 w-5 mr-1" />
                YÃ¶netim
              </button>
            </div>
          </div>
        </div>
      </nav>

      {/* Ana Ä°Ã§erik */}
      <main className="max-w-7xl mx-auto py-6 sm:px-6 lg:px-8">
        {renderContent()}
      </main>
    </div>
  );
};

export default App;
