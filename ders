import React, { useState, useEffect, useCallback, useMemo, useRef } from 'react';
import { initializeApp } from 'firebase/app';
import { getAuth, signInAnonymously, signInWithCustomToken } from 'firebase/auth';
import { getFirestore, doc, getDoc, setDoc, updateDoc, onSnapshot } from 'firebase/firestore';
import { setLogLevel } from 'firebase/firestore';
import {
  BookOpen,
  ClipboardList,
  LayoutGrid,
  Settings,
  AlertTriangle,
  Save,
  Loader2,
  Lock,
  Unlock,
  Key,
  ArrowLeft
} from 'lucide-react';

// Firestore loglarÄ±nÄ± aÃ§alÄ±m (geliÅŸtirme iÃ§in faydalÄ±)
// setLogLevel('debug');

/**
 * Ana Uygulama BileÅŸeni
 */
const App = () => {
  // DÃ¶nemlerin hangi dersleri iÃ§erdiÄŸini gÃ¶steren ana harita
  const PERIOD_SUBJECT_MAP = useMemo(() => ({
    '1. DÃ¶nem': ['Matematik', 'Fizik'],
    '2. DÃ¶nem': ['Matematik', 'Tarih'],
  }), []);

  // Home sayfasÄ±nda gÃ¶sterilecek benzersiz derslerin listesi
  const uniqueSubjects = useMemo(() => {
    const allSubjects = Object.values(PERIOD_SUBJECT_MAP).flat();
    return Array.from(new Set(allSubjects));
  }, [PERIOD_SUBJECT_MAP]);

  // YardÄ±mcÄ± fonksiyon: Bir dersin hangi dÃ¶nemlerde mevcut olduÄŸunu bulur
  const getPeriodsForSubject = useCallback((subjectName) => {
    return Object.keys(PERIOD_SUBJECT_MAP).filter(period =>
      PERIOD_SUBJECT_MAP[period].includes(subjectName)
    );
  }, [PERIOD_SUBJECT_MAP]);

  const [page, setPage] = useState('home'); // 'home', 'subject', 'admin'
  const [db, setDb] = useState(null);
  const [auth, setAuth] = useState(null);
  const [userId, setUserId] = useState('');
  const [isAuthReady, setIsAuthReady] = useState(false);

  // SeÃ§ili ders ve dÃ¶nem state'leri (baÅŸlangÄ±Ã§ta null)
  const [selectedSubject, setSelectedSubject] = useState(null);
  const [selectedPeriod, setSelectedPeriod] = useState(null); 

  // YÃ–NETÄ°CÄ° GÄ°RÄ°ÅÄ° Ä°Ã‡Ä°N STATE'LER
  const [isAdminAuthenticated, setIsAdminAuthenticated] = useState(false);
  const [adminPasswordInput, setAdminPasswordInput] = useState('');
  const [adminMockPassword, setAdminMockPassword] = useState('admin123'); 

  // Firebase ve Kimlik DoÄŸrulama BaÅŸlangÄ±cÄ±
  useEffect(() => {
    // ... (Firebase initialization and Auth logic is the same)
    try {
      const appId = typeof __app_id !== 'undefined' ? __app_id : 'default-app-id';
      const firebaseConfig = typeof __firebase_config !== 'undefined' ? JSON.parse(__firebase_config) : {};

      if (Object.keys(firebaseConfig).length === 0) {
        console.error("Firebase konfigÃ¼rasyonu eksik.");
        return;
      }

      const app = initializeApp(firebaseConfig);
      const firestore = getFirestore(app);
      const userAuth = getAuth(app);

      setDb(firestore);
      setAuth(userAuth);

      const initAuth = async () => {
        try {
          const initialAuthToken = typeof __initial_auth_token !== 'undefined' ? __initial_auth_token : null;
          if (initialAuthToken) {
            await signInWithCustomToken(userAuth, initialAuthToken);
          } else {
            await signInAnonymously(userAuth);
          }
          const currentUserId = userAuth.currentUser?.uid || crypto.randomUUID();
          setUserId(currentUserId);
          setIsAuthReady(true);
          console.log("Firebase BaÅŸarÄ±lÄ±, KullanÄ±cÄ± ID:", currentUserId);
        } catch (error) {
          console.error("Kimlik doÄŸrulama hatasÄ±:", error);
          setIsAuthReady(true); 
        }
      };

      initAuth();

    } catch (error) {
      console.error("Firebase baÅŸlatÄ±lÄ±rken kritik hata:", error);
      setIsAuthReady(true);
    }
  }, []);

  // Firestore yolunu oluÅŸturma yardÄ±mcÄ± fonksiyonu (Public data)
  const getPublicDocRef = useCallback((subject, period) => {
    if (!db || !subject || !period) return null;
    const appId = typeof __app_id !== 'undefined' ? __app_id : 'default-app-id';
    // DokÃ¼man ID'sini ders ve dÃ¶nem bilgisini birleÅŸtirerek oluÅŸturuyoruz
    const docId = `${subject}_${period.replace(/\s/g, '')}`; 
    return doc(db, 'artifacts', appId, 'public', 'data', 'subjects', docId);
  }, [db]);

  const handleAdminLogin = () => {
    if (adminPasswordInput === adminMockPassword) { 
      setIsAdminAuthenticated(true);
      setAdminPasswordInput(''); 
      console.log("YÃ¶netici giriÅŸi baÅŸarÄ±lÄ±.");
    } else {
      console.error("HatalÄ± yÃ¶netici ÅŸifresi.");
      setAdminPasswordInput('');
    }
  };


  // --------------- GÃ¶rÃ¼ntÃ¼leme BileÅŸenleri ---------------

  // Ders kartÄ±
  const SubjectCard = ({ name, icon, onClick }) => (
    <div
      onClick={onClick}
      className="bg-white p-6 rounded-xl shadow-lg hover:shadow-xl transition-all duration-300 transform hover:scale-[1.01] cursor-pointer border-t-4 border-indigo-500 flex flex-col items-center justify-center text-center"
    >
      <span className="text-4xl mb-3">{icon}</span>
      <h2 className="text-xl font-semibold text-gray-800">{name}</h2>
    </div>
  );

  // DÃ¶nem SeÃ§im KartÄ±
  const PeriodCard = ({ period, onClick }) => (
    <div
      onClick={onClick}
      className="bg-white p-6 rounded-xl shadow-lg hover:shadow-xl transition-all duration-300 transform hover:scale-[1.01] cursor-pointer border-t-4 border-teal-500 flex flex-col items-center justify-center text-center"
    >
      <span className="text-4xl mb-3">ğŸ—“ï¸</span>
      <h2 className="text-xl font-semibold text-gray-800">{period}</h2>
    </div>
  );

  // SubjectDetail (Ä°Ã§erik GÃ¶rÃ¼ntÃ¼leyici)
  const SubjectDetailContentView = ({ subject, period, db, getPublicDocRef, userId }) => {
    const [content, setContent] = useState({ konu: '', test: [] });
    const [tab, setTab] = useState('konu'); 
    const [loading, setLoading] = useState(true);
    const [error, setError] = useState(null);

    useEffect(() => {
      if (!db || !subject || !period) return;
      const docRef = getPublicDocRef(subject, period); 
      if (!docRef) return;

      setLoading(true);
      setError(null);

      const unsubscribe = onSnapshot(docRef, (docSnap) => {
        setLoading(false);
        if (docSnap.exists()) {
          const data = docSnap.data();
          const testDataString = data.testSorulari || '[]';
          let parsedTest = [];
          try {
            parsedTest = JSON.parse(testDataString);
          } catch (e) {
            console.error("Test sorularÄ± JSON hatasÄ±:", e);
            setError("Test sorularÄ± hatalÄ± formatta.");
          }

          setContent({
            konu: data.konuAnlatimi || 'Ä°Ã§erik BulunamadÄ±.',
            test: parsedTest
          });
        } else {
          setContent({ konu: 'Bu ders iÃ§in henÃ¼z iÃ§erik girilmemiÅŸtir.', test: [] });
          setError(`${period} dÃ¶nemi iÃ§in veri tabanÄ±nda bu ders belgesi bulunamadÄ±.`);
        }
      }, (err) => {
        console.error("Firestore dinleme hatasÄ±:", err);
        setError("Ä°Ã§erik yÃ¼klenirken bir hata oluÅŸtu.");
        setLoading(false);
      });

      return () => unsubscribe();
    }, [db, subject, period, getPublicDocRef]);

    const renderContent = () => {
      if (loading) {
        return <div className="p-10 text-center text-gray-500 flex items-center justify-center"><Loader2 className="animate-spin mr-2" /> Ä°Ã§erik yÃ¼kleniyor...</div>;
      }
      if (error) {
        return <div className="p-4 bg-red-100 border-l-4 border-red-500 text-red-700 rounded-md mt-4 flex items-center"><AlertTriangle className="h-5 w-5 mr-2" /> {error}</div>;
      }

      if (tab === 'konu') {
        const formattedKonu = content.konu.split('\n').map((line, index) => {
            if (line.startsWith('# ')) return <h2 key={index} className="text-2xl font-bold mt-4 mb-2">{line.substring(2)}</h2>;
            if (line.startsWith('## ')) return <h3 key={index} className="text-xl font-semibold mt-3 mb-1">{line.substring(3)}</h3>;
            // Basit Markdown liste desteÄŸi
            if (line.startsWith('* ') || line.startsWith('- ')) return <li key={index} className="mb-1 ml-4 text-gray-700 list-disc">{line.substring(2)}</li>;
            return <p key={index} className="mb-2 text-gray-700">{line}</p>;
        });
        return <div className="prose p-4">{formattedKonu}</div>;

      } else if (tab === 'test') {
        if (content.test.length === 0) {
            return <div className="p-10 text-center text-gray-500">Bu ders iÃ§in henÃ¼z test sorusu girilmemiÅŸtir.</div>;
        }
        return (
          <div className="space-y-6 p-4">
            {content.test.map((item, index) => (
              <div key={index} className="bg-white p-5 rounded-lg shadow-md border-l-4 border-indigo-500">
                <p className="font-bold text-gray-800 mb-2">Soru {index + 1}:</p>
                <p className="text-lg mb-3">{item.soru}</p>
                <div className="mt-2 pt-2 border-t border-gray-100">
                    <p className="text-sm font-medium text-indigo-600">Cevap:</p>
                    <p className="text-gray-600 italic">{item.cevap}</p>
                </div>
              </div>
            ))}
          </div>
        );
      }
    };

    return (
      <div className="p-4 sm:p-6 bg-white rounded-xl shadow-lg">
        <button 
            onClick={() => setSelectedPeriod(null)}
            className="text-sm font-medium text-indigo-500 hover:text-indigo-700 transition-colors mb-3 flex items-center p-2 rounded-lg hover:bg-indigo-50"
        >
            <ArrowLeft className="h-4 w-4 mr-1" /> DÃ¶nem SeÃ§imine Geri DÃ¶n
        </button>
        <h1 className="text-3xl font-extrabold text-indigo-700 mb-1">{subject}</h1>
        <h2 className="text-xl font-semibold text-gray-500 mb-4 border-b pb-2">{period}</h2> 

        {/* Sekmeler */}
        <div className="flex border-b border-gray-200 mb-4">
          <button
            onClick={() => setTab('konu')}
            className={`py-2 px-4 text-sm sm:text-base font-medium rounded-t-lg transition-colors duration-200 flex items-center ${tab === 'konu' ? 'text-indigo-600 border-b-2 border-indigo-600' : 'text-gray-500 hover:text-gray-700'}`}
          >
            <BookOpen className="h-5 w-5 mr-2" />
            Konu AnlatÄ±mÄ±
          </button>
          <button
            onClick={() => setTab('test')}
            className={`py-2 px-4 text-sm sm:text-base font-medium rounded-t-lg transition-colors duration-200 flex items-center ${tab === 'test' ? 'text-indigo-600 border-b-2 border-indigo-600' : 'text-gray-500 hover:text-gray-700'}`}
          >
            <ClipboardList className="h-5 w-5 mr-2" />
            Test SorularÄ±
          </button>
        </div>

        {/* Ä°Ã§erik AlanÄ± */}
        {renderContent()}

        <p className="mt-6 text-xs text-gray-400 text-right">KullanÄ±cÄ± ID: {userId}</p>
      </div>
    );
  };

  // YÃ¶netici GiriÅŸ BileÅŸeni (DeÄŸiÅŸmedi)
  const AdminLogin = ({ password, setPassword, handleLogin, mockPassword }) => {
    const inputRef = useRef(null);
    const [loginError, setLoginError] = useState(false);

    useEffect(() => {
        if (inputRef.current) {
            inputRef.current.focus();
        }
    }, []);

    const handleInternalLogin = () => {
        if (password === mockPassword) {
            handleLogin();
            setLoginError(false);
        } else {
            setLoginError(true);
            setPassword('');
        }
    };

    return (
      <div className="flex flex-col items-center p-8 bg-white rounded-xl shadow-2xl w-full max-w-sm">
        <Lock className="h-12 w-12 text-red-500 mb-4" />
        <h1 className="text-2xl font-bold text-gray-800 mb-6">YÃ¶netici GiriÅŸi</h1>
        <p className="text-sm text-gray-500 mb-4 text-center">Ä°Ã§eriÄŸi dÃ¼zenlemek iÃ§in yÃ¶netici ÅŸifrenizi girin.</p>
        
        <input
            ref={inputRef} 
            type="password"
            placeholder="Åifre"
            value={password}
            onChange={(e) => {
                setPassword(e.target.value);
                setLoginError(false);
            }}
            onKeyDown={(e) => { if (e.key === 'Enter') handleInternalLogin(); }}
            className={`w-full p-3 border rounded-lg shadow-sm focus:ring-red-500 focus:border-red-500 mb-4 ${loginError ? 'border-red-500' : 'border-gray-300'}`}
        />
        
        {loginError && (
            <div className="p-2 mb-4 text-sm text-red-700 bg-red-100 rounded-lg w-full flex items-center justify-center">
                <AlertTriangle className="h-4 w-4 mr-1"/> HatalÄ± ÅŸifre.
            </div>
        )}

        <button
          onClick={handleInternalLogin}
          className="w-full bg-red-600 hover:bg-red-700 text-white font-semibold py-3 px-8 rounded-xl shadow-lg transition-all duration-300 transform hover:scale-[1.01] flex items-center justify-center"
        >
          <Unlock className="h-5 w-5 mr-2" /> GiriÅŸ Yap
        </button>
        <p className="mt-4 text-xs text-gray-400">Mevcut Mock Åifre: <span className="font-mono text-red-400">{mockPassword}</span></p>
        <p className="mt-2 text-xs text-gray-400">Not: GerÃ§ek bir uygulamada ÅŸifre sunucuda doÄŸrulanmalÄ±dÄ±r.</p>
      </div>
    );
  };


  // YÃ¶netim BileÅŸeni (AdminPanel)
  const AdminPanel = ({ db, getPublicDocRef, PERIOD_SUBJECT_MAP, adminMockPassword, setAdminMockPassword, setIsAdminAuthenticated }) => {
    
    const periodOptions = Object.keys(PERIOD_SUBJECT_MAP);
    
    // Admin panelinde dÃ¶nem ve ders seÃ§imi
    const [period, setPeriod] = useState('1. DÃ¶nem'); 
    const [subject, setSubject] = useState(PERIOD_SUBJECT_MAP['1. DÃ¶nem'][0]); 

    const [konuContent, setKonuContent] = useState('');
    const [testContent, setTestContent] = useState('');
    const [loading, setLoading] = useState(false);
    const [saving, setSaving] = useState(false);
    const [message, setMessage] = useState({ text: '', type: '' }); 

    // Åifre DeÄŸiÅŸtirme State'leri
    const [newPassword, setNewPassword] = useState('');
    const [confirmPassword, setConfirmPassword] = useState('');
    const [passwordChangeMessage, setPasswordChangeMessage] = useState({ text: '', type: '' });


    // Ä°Ã§eriÄŸi YÃ¼kleme Fonksiyonu
    const loadContent = useCallback(async (selectedSubject, selectedPeriod) => {
      if (!db || loading) return;

      setLoading(true);
      setMessage({ text: 'Ä°Ã§erik yÃ¼kleniyor...', type: 'info' });

      try {
        const docRef = getPublicDocRef(selectedSubject, selectedPeriod); 
        if (!docRef) throw new Error("Veri tabanÄ± baÄŸlantÄ±sÄ± yok.");

        const docSnap = await getDoc(docRef);

        if (docSnap.exists()) {
          const data = docSnap.data();
          setKonuContent(data.konuAnlatimi || '');
          setTestContent(data.testSorulari || '[]');
          setMessage({ text: `'${selectedSubject}' dersinin '${selectedPeriod}' iÃ§eriÄŸi baÅŸarÄ±yla yÃ¼klendi.`, type: 'success' });
        } else {
          // Belge yoksa, varsayÄ±lan bir baÅŸlangÄ±Ã§ iÃ§eriÄŸi oluÅŸturalÄ±m
          const initialData = {
            name: selectedSubject,
            konuAnlatimi: `# ${selectedSubject} ${selectedPeriod} Konu AnlatÄ±mÄ±\n\nBu, gÃ¼ncelleyeceÄŸiniz konu anlatÄ±mÄ± bÃ¶lÃ¼mÃ¼dÃ¼r.`,
            testSorulari: '[\n {\n "soru": "Ä°lk varsayÄ±lan soru?",\n "cevap": "Ä°lk varsayÄ±lan cevap"\n }\n]'
          };
          await setDoc(docRef, initialData);
          setKonuContent(initialData.konuAnlatimi);
          setTestContent(initialData.testSorulari); 
          setMessage({ text: `'${selectedSubject}' dersinin '${selectedPeriod}' dÃ¶nemi iÃ§in varsayÄ±lan iÃ§erik oluÅŸturuldu ve yÃ¼klendi.`, type: 'warning' });
        }
      } catch (error) {
        console.error("Ä°Ã§erik yÃ¼klenirken hata:", error);
        setMessage({ text: `Ä°Ã§erik yÃ¼klenemedi: ${error.message}`, type: 'error' });
      } finally {
        setLoading(false);
      }
    }, [db, loading, getPublicDocRef]);

    // Subject veya Period deÄŸiÅŸtiÄŸinde iÃ§eriÄŸi yÃ¼kle
    useEffect(() => {
      if (db && subject && period) {
        loadContent(subject, period);
      }
    }, [db, subject, period, loadContent]);

    // Period deÄŸiÅŸtiÄŸinde, eÄŸer seÃ§ili ders yeni periyotta yoksa, ilk derse sÄ±fÄ±rla
    useEffect(() => {
        if (PERIOD_SUBJECT_MAP[period] && !PERIOD_SUBJECT_MAP[period].includes(subject)) {
            setSubject(PERIOD_SUBJECT_MAP[period][0] || '');
        }
    }, [period, subject, PERIOD_SUBJECT_MAP]);

    // Ä°Ã§eriÄŸi Kaydetme Fonksiyonu
    const saveContent = async () => {
      if (!db || saving || loading || !subject || !period) return;

      if (!konuContent.trim() || !testContent.trim()) {
        setMessage({ text: 'Konu AnlatÄ±mÄ± ve Test SorularÄ± alanlarÄ± boÅŸ bÄ±rakÄ±lamaz.', type: 'error' });
        return;
      }

      try {
        JSON.parse(testContent);
      } catch (e) {
        setMessage({ text: 'Test SorularÄ± alanÄ± geÃ§erli bir JSON formatÄ±nda deÄŸil. LÃ¼tfen kontrol edin.', type: 'error' });
        return;
      }

      setSaving(true);
      setMessage({ text: 'DeÄŸiÅŸiklikler veri tabanÄ±na yazÄ±lÄ±yor...', type: 'info' });

      try {
        const docRef = getPublicDocRef(subject, period);

        await updateDoc(docRef, {
          konuAnlatimi: konuContent,
          testSorulari: testContent
        });

        setMessage({ text: `'${subject}' dersinin '${period}' iÃ§eriÄŸi baÅŸarÄ±yla gÃ¼ncellendi!`, type: 'success' });

      } catch (error) {
        console.error("Ä°Ã§erik kaydedilirken hata:", error);
        setMessage({ text: `Kaydetme hatasÄ±: ${error.message}`, type: 'error' });
      } finally {
        setSaving(false);
      }
    };

    // Åifre DeÄŸiÅŸtirme Fonksiyonu
    const handleChangePassword = () => {
        if (newPassword.length < 6) {
            setPasswordChangeMessage({ text: 'Yeni ÅŸifre en az 6 karakter olmalÄ±dÄ±r.', type: 'error' });
            return;
        }
        if (newPassword !== confirmPassword) {
            setPasswordChangeMessage({ text: 'Yeni ÅŸifreler eÅŸleÅŸmiyor.', type: 'error' });
            return;
        }

        setAdminMockPassword(newPassword);
        setNewPassword('');
        setConfirmPassword('');
        setPasswordChangeMessage({ text: 'Åifre baÅŸarÄ±yla deÄŸiÅŸtirildi! Tekrar giriÅŸ yapmanÄ±z gerekecek.', type: 'success' });
        
        setTimeout(() => {
            setIsAdminAuthenticated(false);
            setPasswordChangeMessage({ text: '', type: '' });
        }, 1500);
    };

    const messageClass = useMemo(() => {
      let base = "mt-6 p-4 rounded-xl border transition-all duration-300 text-sm flex items-center";
      if (!message.text) return "hidden";

      switch (message.type) {
        case 'success':
          return `${base} bg-green-100 border-green-400 text-green-700`;
        case 'error':
          return `${base} bg-red-100 border-red-400 text-red-700`;
        case 'warning':
          return `${base} bg-yellow-100 border-yellow-400 text-yellow-700`;
        case 'info':
        default:
          return `${base} bg-blue-100 border-blue-400 text-blue-700`;
      }
    }, [message]);
    
    const passwordChangeMessageClass = useMemo(() => {
        let base = "p-3 rounded-lg mb-4 text-sm flex items-center";
        if (!passwordChangeMessage.text) return "hidden";

        switch (passwordChangeMessage.type) {
            case 'success':
                return `${base} bg-green-100 text-green-700`;
            case 'error':
                return `${base} bg-red-100 text-red-700`;
            default:
                return "hidden";
        }
    }, [passwordChangeMessage]);


    return (
      <div className="container mx-auto p-4 sm:p-8">
        <div className="bg-white rounded-xl shadow-2xl p-6 sm:p-10 transition-all duration-300">
          <h1 className="text-3xl font-extrabold text-red-700 mb-6 border-b pb-3 flex items-center">
            <Settings className="h-7 w-7 mr-2" /> Ä°Ã§erik YÃ¶netim Paneli
          </h1>
          <p className="text-gray-600 mb-8">Bu panel, uygulamanÄ±n ana iÃ§eriÄŸini (Konu AnlatÄ±mÄ± ve Test SorularÄ±) dÃ¼zenlemenizi saÄŸlar.</p>

          <div className="flex flex-col sm:flex-row gap-6 mb-6">
            {/* DÃ¶nem SeÃ§imi */}
